{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/2.0/cli/schema.json",
  "productName": "LayoutLens",
  "version": "0.1.0",
  "identifier": "com.layoutlens.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [{ "label": "main", "title": "LayoutLens", "url": "/" }],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      },
      "csp": {
        "default-src": "'self' asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost https://asset.localhost blob: data:",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "macOS": {
      "minimumSystemVersion": "13.0"
    }
  }
}
